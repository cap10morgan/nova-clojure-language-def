<?xml version="1.0" encoding="UTF-8"?>
<syntax name="clj">
	<meta>
		<name>Clojure</name>
		<type>structured</type>
		<preferred-file-extension>clj</preferred-file-extension>
	</meta>

	<detectors>
		<extension priority="1.0">clj,cljs,cljc,cljx,edn,boot</extension>
	</detectors>

	<comments>
		<single>
			<expression>;</expression>
		</single>
		<!--multiline>
			<starts-with>
				<expression>(comment</expression>
			</starts-with>
			<ends-with>
				<expression>&10);</expression>
			</ends-with>
		</multiline-->
	</comments>

    <brackets>
        <pair open="{" close="}" />
        <pair open="[" close="]" />
        <pair open="(" close=")" />
    </brackets>

    <surrounding-pairs>
        <pair open="{" close="}" />
        <pair open="[" close="]" />
        <pair open="(" close=")" />
        <pair open="&quot;" close="&quot;" />
    </surrounding-pairs>




	<scopes>
		<include syntax="self" collection="keywords" />

		<scope name="clojure.string.double-quoted">
			<expression>(?:\b(b|r|u))?&quot;((?:[^&quot;\\]|\\.)*)(?:&quot;|$)</expression>
			<capture number="1" name="clojure.string.double-quoted.prefix" />
			<capture number="2" name="clojure.string.double-quoted.text" />
		</scope>
	</scopes>


	<collections>
		<collection name="keywords">
			<scope name="clojure.keyword">
				<strings>
					<string>defn</string>
					<string>defn-</string>
					<string>defproject</string>
					<string>defrecord</string>
					<string>fn</string>
					<string>ns</string>
					<string>require</string>
				</strings>
			</scope>
		</collection>

	</collections>
</syntax>
